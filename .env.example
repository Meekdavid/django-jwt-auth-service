# ==============================================
# Django JWT Authentication Service
# Environment Variables Configuration
# ==============================================

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================

# Django secret key (REQUIRED - Generate a new one for production)
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-super-secret-key-here-change-this-in-production-min-50-chars

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django settings module
DJANGO_SETTINGS_MODULE=auth_service.settings.dev

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/auth_service_db

# For Docker development:
# DATABASE_URL=postgresql://postgres:postgres123@db:5432/auth_service_db

# For Railway/Production:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# Redis URL for caching and session storage
# Format: redis://[:password]@host:port/db_number
REDIS_URL=redis://localhost:6379/0

# For Redis with password:
# REDIS_URL=redis://:password@localhost:6379/0

# For Docker development:
# REDIS_URL=redis://:redis123@redis:6379/0

# For Railway/Production:
# REDIS_URL=redis://user:password@host:port/0

# ==============================================
# JWT AUTHENTICATION SETTINGS
# ==============================================

# JWT Access token lifetime (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60

# JWT Refresh token lifetime (in minutes) - 7 days = 10080 minutes
JWT_REFRESH_TOKEN_LIFETIME=10080

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

# Email backend (for password reset emails)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production email (example with Gmail):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# ==============================================
# SECURITY SETTINGS (Production)
# ==============================================

# HTTPS settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Content security
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================
# DOCKER SPECIFIC SETTINGS
# ==============================================

# Docker Compose service names (when using docker-compose)
POSTGRES_DB=auth_service_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=db
POSTGRES_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ==============================================
# TESTING SETTINGS
# ==============================================

# Test database (automatically created/destroyed)
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/test_auth_service_db

# Test Redis database (use different DB number)
TEST_REDIS_URL=redis://localhost:6379/15

# ==============================================
# DEPLOYMENT SETTINGS
# ==============================================

# Railway deployment
# RAILWAY_STATIC_URL=
# RAILWAY_VOLUME_MOUNT_PATH=

# Render deployment
# RENDER_EXTERNAL_HOSTNAME=
# RENDER_EXTERNAL_URL=

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=False

# Django Extensions (development only)
ENABLE_DJANGO_EXTENSIONS=False

# ==============================================
# EXAMPLE CONFIGURATIONS BY ENVIRONMENT
# ==============================================

# LOCAL DEVELOPMENT:
# DEBUG=True
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auth_service_db
# REDIS_URL=redis://localhost:6379/0
# ALLOWED_HOSTS=localhost,127.0.0.1

# DOCKER DEVELOPMENT:
# DEBUG=True
# DATABASE_URL=postgresql://postgres:postgres123@db:5432/auth_service_db
# REDIS_URL=redis://:redis123@redis:6379/0
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# PRODUCTION (Railway/Render):
# DEBUG=False
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# REDIS_URL=${{Redis.REDIS_URL}}
# ALLOWED_HOSTS=your-domain.com,*.railway.app
